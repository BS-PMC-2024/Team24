pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'reqgenius:latest'
        REGISTRY = 'docker.io'
        DOCKERFILE_PATH = 'Dockerfile'
        BUILD_CONTEXT = '.'
        GIT_REPO = 'https://github.com/BS-PMC-2024/Team24.git' 
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clone the Git repository
                    git url: "$GIT_REPO", branch: 'main' 
                }
            }
        }

        stage('Clean Up Old Docker Images') {
            steps {
                script {
                    // Clean up old Docker images
                    sh 'docker rmi -f $(docker images -f "dangling=true" -q) || true'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image for linux/amd64 platform
                    sh 'docker buildx build --platform linux/amd64 -t $DOCKER_IMAGE -f $DOCKERFILE_PATH $BUILD_CONTEXT --load'
                }
            }
        }

         stage('Run Tests') {
            steps {
                script {
                    // Run Django tests inside the Docker container with specified platform
                    sh 'docker run --rm --platform linux/amd64 $DOCKER_IMAGE python ReqGenius/ReqGenius/tests.py'
                }
            }
        }



        stage('Clean Up Docker Containers') {
            steps {
                script {
                    // Clean up Docker containers
                    sh 'docker container prune -f'
                }
            }
        }
    }

    post {
        always {
            script {
                // Clean up Docker images after the pipeline run
                sh 'docker rmi -f $DOCKER_IMAGE || true'
            }
        }
    }
}
